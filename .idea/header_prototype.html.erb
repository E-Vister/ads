<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="logo">
      <%= link_to image_tag('Unknown.png', alt: 'logo'), root_path %>
      <%= link_to "Ads app", root_path, id: "logo" %>
    </div>

    <nav>
      <ul class="nav navbar-nav navbar-right">
        <div class="col-md-12 text-center ">
          <%= link_to "Create ad", '#', class: "btn btn-outline-primary btn-sm" %>
          <% if signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <button type="button" class="btn btn-outline-primary btn-sm">Account</button>
              </a>
              <form class="dropdown-menu p-4">
                <div class="form-group">
                  <label for="email">Email address</label>
                  <input type="email" class="form-control" id="email" placeholder="email@example.com">
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
              </form>

            </li>
          <% else %>
            <%= link_to "Sign In", signin_path , class: "btn btn-outline-primary btn-sm" %>
          <% end %>
        </div>
      </ul>
    </nav>
  </div>
</header>