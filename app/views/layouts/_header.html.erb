<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="logo">
      <%= link_to image_tag('Unknown.png', alt: 'logo'), root_path %>
      <%= link_to "Ads app", root_path, id: "logo" %>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <div class="col-md-12 text-center">
          <% if signed_in? %>
            <li class="dropdown">
              <a href="<%= signup_path %>">
                <button type="button" class="btn btn-outline-primary btn-sm">
                  <div class="ad-create-button">
                    <%= image_tag('white-plus.png', alt: 'header-plus') %>
                    Create ad
                  </div>
                </button>
              </a>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <button type="button" class="btn btn-outline-primary btn-sm">Account</button>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <button type="button" class="btn btn-outline-primary btn-sm">Sign In</button>
              </a>
              <%= render "layouts/signinform" %>
            </li>
          <% end %>
        </div>
      </ul>
    </nav>
  </div>
</header>