<% provide(:title, @user.username) %>
<div class="row">
  <%= gravatar_for @user %>
  <aside class="col-md-4">
    <section class="user_info">
      <p>
        <b>Username</b><br>
        <%= @user.username %>
      </p>
      <p>
        <b>Email</b><br>
        <%= email_print(@user) %>
      </p>
      <p>
        <b>Phone</b><br>
        <%= phone_print(@user) %>
      </p>
      <p>Change password</p>
      <% if current_user.admin? && !current_user?(@user) %>
        <%= link_to "delete", @user, method: :delete,
                      data: { confirm: "You sure?" } %>
      <% end %>
    </section>
  </aside>
</div>